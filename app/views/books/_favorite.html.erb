<% if @book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(@book.id), class: "text-danger", method: :delete, remote: true do %>
     <i class="fa fa-heart unlike-btn"></i>︎<%= @book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(@book.id), method: :post, remote: true do %>
    <i class="fa fa-heart like-btn"></i>︎<%= @book.favorites.count %>
  <% end %>
<% end %>